#. runall > output 2>&1

doits=`find . -name doit`
startdir=`pwd`
for x in $doits ; do
 dir=`dirname $x`
 echo ++++++++
 echo $dir
 cd $dir
 . doit
 cd $startdir
done
echo FINISHED


